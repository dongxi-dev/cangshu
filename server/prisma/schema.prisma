datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 用户模块
model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  name     String
  email    String? //s
  createAt DateTime @default(now())
}

// 文件
model File {
  id       Int      @id @default(autoincrement())
  // 文件名
  name     String
  // 文件大小
  size     Int
  // 文件 MINE 类型
  mine     String?
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
}

generator client {
  provider = "prisma-client-js"
}
