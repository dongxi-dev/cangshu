generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  name     String
  email    String? //s
  createAt DateTime @default(now())
}

model File {
  id       Int      @id @default(autoincrement())
  // 文件名
  name     String
  // 文件类型 0 文件夹 1 图片 2 音频 3 视频 4 文本
  type     Int
  // 文件大小
  size     Int?
  // 文件 MINE 类型
  mine     String?
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
